<h1>Eat-Da-Burger! !</h1>
<div class="body-container">
    <div class="initial">
        <h2>Waiting to be waiting to be devoured</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>
                {{burger_name}}

                <button class="eat" data-id="{{id}}" data-newsleep="{{devoured}}">
                    Devour
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="container">
        <h2>Order a Burger</h2>
        <form class="form">
            <div class="input">
                <label for="name">Burger Name:</label>
                <input type="text" id="name" name="name">
            </div>

            <div class="input">
                <label for="devoured">devoured?</label><br>
                <input class="radio" type="radio" name="devoured" value="1" checked>Devoured<br>
                <input class="radio" type="radio" name="devoured" value="0"> Not Devoured
            </div>
            <button type="submit">Order!!</button>
    </div>

    </form>
    <div class="after-devour">
        <h2>Devoured!</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{id}}
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>